<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zacharee1.systemuituner.prefs.secure.SecureSeekBarPreference
        android:title="@string/feature_long_press_delay"
        android:summary="@string/feature_long_press_delay_desc"
        android:key="long_press_timeout"
        android:defaultValue="400"
        android:icon="@drawable/tap_hold"
        app:icon_color="@color/pref_color_3"
        app:units="ms"
        app:minValue="100"
        app:maxValue="5000"
        app:settings_type="secure"
        />

    <com.zacharee1.systemuituner.prefs.NonPersistentActivityPreference
        android:title="@string/sub_demo"
        android:summary="@string/sub_demo_desc"
        android:key="sub_demo"
        android:icon="@drawable/ic_baseline_tv_24"
        app:icon_color="@color/pref_color_5"
        app:activity_class="com.zacharee1.systemuituner.activities.DemoModeActivity"
        />

    <com.zacharee1.systemuituner.prefs.secure.specific.KeepDeviceOnPluggedPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.AnimationScalesPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.CameraGesturesPreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.ImmersiveModePreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.DarkModePreference />
    <com.zacharee1.systemuituner.prefs.secure.specific.LockscreenShortcutsPref />

</PreferenceScreen>