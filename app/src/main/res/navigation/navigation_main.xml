<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rw.tweaks.fragments.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_UIFragment"
            app:destination="@id/UIFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayFragment"
        android:name="com.rw.tweaks.fragments.DisplayFragment"
        android:label="DisplayFragment" />
    <fragment
        android:id="@+id/UIFragment"
        android:name="com.rw.tweaks.fragments.UIFragment"
        android:label="UIFragment" />
</navigation>